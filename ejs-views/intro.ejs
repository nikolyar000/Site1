        border: 8px solid #f9532d;
        opacity: .4;
    }
    .circle img:nth-child(2) {
        position: absolute;
        left: 0;
        top: 2rem;
        opacity: .4;
    }
    /* Section 1 End */
    
    @media screen and (max-width: 1024px) {
        .circle::before {
            width: 33vw;
            height: 33vw;
        }
        .circle img:nth-child(2) {
            top: 0rem;
        }
    }
    @media screen and (max-width: 768px) {
        .circle::before {
            width: 41vw;
            height: 41vw;
        }
    }
    @media screen and (max-width: 480px) {
        .circle::before {
            width: 90vw;
